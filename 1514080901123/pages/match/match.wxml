<!--pages/match/match.wxml-->
<view class="weui-form-preview" wx:for="{{match}}" wx:key="name">
                <view class="weui-form-preview__hd">
                <view class="weui-form-preview__item">
                 <view class="weui-form-preview__label">
                  <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{item.icon}}" mode="aspectFit" ></image>
                  </view>     
                  </view>         
                 <view class="weui-media-box__title">{{item.name}}</view>

            </view>
          </view>
            <view class="weui-form-preview__bd" >
                <view class="weui-form-preview__item" >
                    <view class="weui-form-preview__label" >时间</view>
                    <view class="weui-form-preview__value" >{{item.date}}</view>


                </view>
                <view>
                <view class="weui-form-preview__item" style="border-width:1px 0 0 0;border-color:#c8c8cd;border-style:solid;">
                    <view class="weui-form-preview__label">城市</view>
                    <view class="weui-form-preview__value">{{item.city}}</view>
                </view>
              </view>

                <view class="weui-form-preview__item" style="border-width:1px 0 0 0;border-color:#c8c8cd;border-style:solid;">
                    <view class="weui-form-preview__label">详细地址</view>
                    <view class="weui-form-preview__value">{{item.locate}}</view>
                </view>

              <view>
              </view>
            </view>
          </view>
        <view class="weui-loadmore weui-loadmore_line">
            <view class="weui-loadmore__tips weui-loadmore__tips_in-line">暂时没有其他赛事了              </view>
        </view>