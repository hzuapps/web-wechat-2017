<form bindsubmit="listenFormSubmit" bindreser="listenFormReser" >
  <!--新增的账目类型-->
  <view class="inputView">
    <input class="input" name="username" type="number" placeholder="请输入账目的备注" placeholder-style="color: gray"> </input>
  </view>
  <view class="inputView">
    <input class="input" name="password" password="true" placeholder="请输入具体账目" placeholder-style="color: gray"/>
  </view>
  <!--保存为-->
  <View style="display:flex;justify-content: center;margin-top:10px;">
    <radio-group name="radio-group" bindchange="radioChange">
      <label>
        <radio value="manager" checked="true"/>支出
      </label>
      <label>
        <radio value="tearch" checked="true"/>收入
      </label>
      <label>
      <radio value="student" checked="true"/>其他
      </label>
    </radio-group>
  </View>
  <button formType="submit" type="primary" style="margin-top:10px;">保存</button>
  <button formType="reset" type="warn" style="margin-top:10px;">重置</button>
  
</form>