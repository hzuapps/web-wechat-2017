.zan-form {
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.zan-form__item {
  line-height: 26px;
}

.zan-form__title {
  float: left;
  width: 80px;
  font-size: 14px;
}

.zan-form__title--top {
  align-self: flex-start;
}

.zan-form__input, .zan-form__textarea {
  min-height: 26px;
}

.zan-form__input input {
  min-height: 26px;
}

.zan-form__textarea {
  display: -webkit-flex;
  display: flex;
  align-items: center;
}

.zan-form__textarea textarea {
  width: auto;
  flex: 1;
}
