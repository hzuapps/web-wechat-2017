
<view class="page">
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="*this">
                <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="../images/icon_tabbar.png" />
                    <view class="weui-grid__label">话题类型</view>
                </navigator>
            </block>
        </view>
    </view>
  
    <view class="page__bd page__bd_spacing">
        <button class="weui-btn" type="primary">点击发布话题</button>
        <button class="weui-btn" type="warn">点击撤销发布</button>
        <button class="weui-btn" type="default">点击查看讨论</button>
        <button class="weui-btn" type="primary" plain="true">点击进行讨论</button>
    </view>
</view>