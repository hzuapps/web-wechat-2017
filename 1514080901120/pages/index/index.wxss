/**index.wxss**/
.book-add{
  width: 100%;
  padding: 20rpx 0;
  background: #ebf0f0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 5;
}
.add-btn{
  width: 50rpx;
  height: 50rpx;
}

.bookcase-item{
  display: flex;
  width: calc(100vw - 80rpx);
  flex-direction: row;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #ccc;
}

.book-content{
  justify-content: space-around;
}
.book-new {
  margin-left: 20rpx;
  padding: 0 6rpx;
  background: red;
  color: white;
  font-size: 12px;
}
