@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
.container {
    height: 100%;
    min-height: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.widget-cell{
    display: flex;
    align-items: center;
}
.widget-cell .cell-bd{
    flex:1;
}
.widget-cell .cell-arrow{
    padding-right: 30rpx;
    position: relative;
}
.widget-cell .cell-arrow:after{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;
}

view.title{
    font-weight:700;
    font-size:1rem;
    margin:40rpx 0;
    padding:0 20rpx;
    color:#353535;
    border-left:10rpx transparent solid;    
}
view.title-red{
    border-left-color: #e64340;
}
view.title-blue{
    border-left-color: #576b95;
}
view.title-green{
    border-left-color: #09bb07;
}
view.title-black{
    border-left-color: #353535;
}
view.title-gray{
    border-left-color: #888888;
}
view.title text{
    font-size:.8rem;
    color:#888888;
    margin-left:20rpx;
    font-weight:normal;
}
