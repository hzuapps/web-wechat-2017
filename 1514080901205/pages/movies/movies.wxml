<view class="detail-container">
  <image class="head-img" src="{{movie.images.small}}" mode="aspectFill" />
  <view class="head-img-hover" data-src="{{movie.images.small}}" catchtap="viewMoviePostImg">
    <text class="main-title">{{movie.title}}</text>
    <text class="sub-title">{{movie.countries + " · "+movie.year}}</text>
    <view class="like">
      <text class="highlight-font">
        {{movie.collect_count}}
      </text>
      <text class="plain-font">
        人喜欢
      </text>
      <text class="highlight-font">
        {{movie.comments_count}}
      </text>
      <text class="plain-font">
        条评论
      </text>
    </view>
  </view>
  <image class="movie-img" src="{{movie.images.small}}" data-src="{{movie.images.small}}" catchtap="viewMoviePostImg"/>
  <view class="summary">
    <view class="original-title">
      <text>{{movie.originalTitle}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">评分</text>
      <text>{{movie.rating.average}}</text>
    </view>
    <view class="flex-row">
      <text class="mark">导演</text>
      <text><block wx:for="{{movie.directors}}">{{item.name}} </block></text>
    </view>
    <view class="flex-row">
      <text class="mark">影人</text>
      <text><block wx:for="{{movie.casts}}">{{item.name}} </block></text>
    </view>
    <view class="flex-row">
      <text class="mark">类型</text>
      <text>{{movie.genres}}</text>
    </view>
  </view>
  <view class="hr"></view>
  <view class="synopsis">
    <text class="synopsis-font">剧情简介</text>
    <text class="summary-content">{{movie.summary}}</text>
  </view>
  <view class="hr"></view>
  <view class="cast">
    <text class="cast-font"> 影人</text>
    <scroll-view class="cast-imgs" scroll-x="true" style="width:100%">
      <block wx:for="{{movie.casts}}" wx:for-item="item" wx:key="casts">
        <view class="cast-container">
          <image class="cast-img" src="{{item.avatars.small}}"></image>
          <text class="cast-name">{{item.name}}</text>
        </view>
      </block>
    </scroll-view>
  </view>

</view>