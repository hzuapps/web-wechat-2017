}
.boxoffice{
  width: 10px;
}
.sumboxoffice{
  width: 10px;
}
.boxoffice_up{
  width: 10px;
}
.movieday{
  width: 10px;
  padding-left: 8px;
}
.avgprice{
  width: 10px;
}
